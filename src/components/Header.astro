---
import '../styles/global.css';
import DarkMode from './DarkMode.astro';
---

<header id="header" class="mt-3 sticky top-3 z-[2] bg-white p-5 rounded-md border-solid border-2 dark:bg-dark-color">
	<nav class="flex items-center justify-evenly">
		<a href="/" class="flex items-center">
			<img src="/icon.png" width="50px" alt="logo" class="logo">
			<h2 class="dark:text-dark-text-color ml-1">blog.nullx.me</h2>
		</a>
		<DarkMode />
	</nav>
</header>

<script>
	var prevScrollpos = window.pageYOffset;
	window.onscroll = function () {
		var currentScrollPos = window.pageYOffset;
		if (prevScrollpos > currentScrollPos) {
			document.getElementById("header").classList.toggle("sticky", true);
		} else {
			document.getElementById("header").classList.toggle("sticky", false);
		}
		prevScrollpos = currentScrollPos;
	}
</script>